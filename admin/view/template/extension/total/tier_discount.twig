{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-total" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
          <i class="fa fa-save"></i>
        </button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default">
          <i class="fa fa-reply"></i>
        </a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  
  <div class="container-fluid">
    {% if error_warning %}
      <div class="alert alert-danger alert-dismissible">
        <i class="fa fa-exclamation-circle"></i> {{ error_warning }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
    {% endif %}
    
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-total" class="form-horizontal">
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="total_tier_discount_status" id="input-status" class="form-control">
                <option value="1" {% if total_tier_discount_status %}selected="selected"{% endif %}>{{ text_enabled }}</option>
                <option value="0" {% if not total_tier_discount_status %}selected="selected"{% endif %}>{{ text_disabled }}</option>
              </select>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="total_tier_discount_sort_order" value="{{ total_tier_discount_sort_order }}" id="input-sort-order" class="form-control"/>
            </div>
          </div>

          <hr />
          <h4 style="margin-left: 15px; margin-bottom: 20px;">Настройки на нивата (Tiers)</h4>

          <div class="well" style="background-color: #f0f7fd; border: 1px solid #d1e9ff; border-left: 5px solid #3498db; overflow: hidden;">
            <div class="form-group">
              <label class="col-sm-2 control-label">Tier 1 - {{ entry_discount_tier1_min }}</label>
              <div class="col-sm-4">
                <input type="text" name="total_tier_discount_tier1_min" value="{{ total_tier_discount_tier1_min }}" placeholder="Min. Price" class="form-control"/>
              </div>
              <label class="col-sm-2 control-label">{{ entry_discount_tier1_percent }} (%)</label>
              <div class="col-sm-4">
                <input type="text" name="total_tier_discount_tier1_percent" value="{{ total_tier_discount_tier1_percent }}" placeholder="Percent" class="form-control"/>
              </div>
            </div>
          </div>

          <div class="well" style="background-color: #f4faf4; border: 1px solid #dff0d8; border-left: 5px solid #27ae60; overflow: hidden;">
            <div class="form-group">
              <label class="col-sm-2 control-label">Tier 2 - {{ entry_discount_tier2_min }}</label>
              <div class="col-sm-4">
                <input type="text" name="total_tier_discount_tier2_min" value="{{ total_tier_discount_tier2_min }}" placeholder="Min. Price" class="form-control"/>
              </div>
              <label class="col-sm-2 control-label">{{ entry_discount_tier2_percent }} (%)</label>
              <div class="col-sm-4">
                <input type="text" name="total_tier_discount_tier2_percent" value="{{ total_tier_discount_tier2_percent }}" placeholder="Percent" class="form-control"/>
              </div>
            </div>
          </div>

          <div class="well" style="background-color: #fdf4f4; border: 1px solid #f2dede; border-left: 5px solid #e74c3c; overflow: hidden;">
            <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_discount_vip_percent }} (%)</label>
              <div class="col-sm-4">
                <input type="text" name="total_tier_discount_vip_percent" value="{{ total_tier_discount_vip_percent }}" placeholder="VIP Percent" class="form-control"/>
              </div>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}